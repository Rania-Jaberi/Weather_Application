<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Weather.WeatherFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@android:color/primary_text_light"
        tools:text="Toulouse"/>

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintDimensioRatio="1:1"
        app:layout_constraintLeft_toLeftOf="@id/city"
        app:layout_constraintTop_toBottomtOf="@id/city"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="102dp"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/weather_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="132dp"
        android:layout_marginStart="132dp"
        android:text="Sunny"
        android:textSize="30sp"
        android:textColor="@android:color/secondary_text_light"
        app:layout_constraintBottom_toBottomOf="@id/weather_icon"
        app:layout_constraintLeft_toLeftOf="@id/weather_icon"
        app:layout_constraintTop_toTopOf="@id/weather_icon"
        app:layout_constraintVertical_bias="0.641" />

    <FrameLayout
        android:id="@+id/back_info"
        android:layout_width="match_parent"
        android:layout_height="250dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather_icon"
        app:layout_constraintVertical_bias="0.136"
        tools:layout_editor_absoluteX="14dp">

        <TextView
            android:id="@+id/temperature_label"
            style="@style/weatherLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="temperature:"
            app:layout_constraintLeft_toLeftOf="@id/weather_icon"
            app:layout_constraintTop_toTopOf="@id/back_info"
            app:layout_constraintVertical_chainStyle="spread" />

        <TextView
            android:id="@+id/temperature"
            style="@style/weatherData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:text="30Â°c" />

        <TextView
            android:id="@+id/humidity_label"
            style="@style/weatherLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Humidity:" />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="140dp"
            style="@style/weatherData"
            android:text="52%" />

        <TextView
            android:id="@+id/pressure_label"
            style="@style/weatherLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:text="Pressure:" />
        <TextView
            android:id="@+id/pressure"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="140dp"
            style="@style/weatherData"
            android:text="1014HPS" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>